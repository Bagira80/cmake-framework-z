<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!--
    This property file is automatically generated by 'luchs'.
    Do not edit it directly!
    It contains some global settings that were provided by 'luchs' and that do
    not have another way to be set.
    (It will automatically be imported by every target if found.)
  -->


  <!-- Properties switches set by 'luchs'. -->
  <PropertyGroup>
    <UsePDBALTPATH>$<IF:$<BOOL:${ENABLE_REMOVING_FULLPATH_TO_PDB_FROM_DLL_AND_EXE}>,true,false></UsePDBALTPATH>
  </PropertyGroup>


  <!-- Further settings set by 'luchs. -->

  <!-- The /PDBALTPATH option has the effect that only the PDB file name will be store in the associated DLL/EXE, not the full path. -->
  <ItemDefinitionGroup  Condition="'$(UsePDBALTPATH)'== 'true' and ('$(Configuration)'=='Debug' or '$(Configuration)'=='RelWithDebInfo')">
    <Link>
      <AdditionalOptions>/PDBALTPATH:%_PDB% %(AdditionalOptions)</AdditionalOptions>
    </Link>
  </ItemDefinitionGroup>

</Project>
